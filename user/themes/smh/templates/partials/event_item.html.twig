<article class="event-article">

    <header class="event-header">
      <time class="event-date" datetime="{{ page.date|date("c") }}">
          <span class="day">{{ page.header.event.start|date("d") }}.</span>
          <span class="month">{{ config.plugins.events.date_format.translate ? 'MONTHS_OF_THE_YEAR'|ta(page.header.event.start|date('n') - 1) : page.header.event.start|date('M') }}</span>
          <span class="time">
              {{ page.header.event.start|date('H:i') }} &ndash; {{ page.header.event.end|date('H:i') }} Uhr
          </span>
          <span class="year">{{ page.header.event.start|date("Y") }}</span>
      </time>
    </header>

    <section class="event-content">
        <h2 class="event-title">{{ page.title }}</h2>
        {{ page.content }}
    </section>

    <footer class="event-footer">
        {% if page.taxonomy.category %}
            <span class="event-tags">
                {% for category in page.taxonomy.category %}
                <a href="{{ event.url|rtrim('/') }}/category{{ config.system.param_sep }}{{ category }}">{{ category }}</a>
                {% endfor %}
            </span>
        {% endif %}

        <span class="event-tags">
          <a class="label label-rounded label-secondary" href="{{ page.parent.url }}/tag{{ config.system.param_sep }}{{ config.plugins.events.date_format.translate ? 'MONTHS_OF_THE_YEAR'|ta(page.header.event.start|date('n') - 1) : page.header.event.start|date('M') }}">{{ config.plugins.events.date_format.translate ? 'MONTHS_OF_THE_YEAR'|ta(page.header.event.start|date('n') - 1) : page.header.event.start|date('M') }}</a>
        </span>

        {% if page.taxonomy.tag %}
            <span class="event-tags">
                {% for tag in page.taxonomy.tag %}
                <a href="{{ event.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}" class="label label-rounded label-secondary">{{ tag }}</a>
                {% endfor %}
            </span>
        {% endif %}
        {% if page.taxonomy.category %}
            <span class="event-tags">
                {% for category in page.taxonomy.category %}
                <a href="{{ event.url|rtrim('/') }}/category{{ config.system.param_sep }}{{ category }}" class="label label-rounded label-secondary">{{ category }}</a>
                {% endfor %}
            </span>
        {% endif %}
        <div class="back-button">
            <a href="{{ page.parent.url }}" class="event-button">{{ 'PLUGIN_EVENTS.EVENTS.BACK'|t }}</a>
        </div>

        {% if page.header.ics %}
          <a href="{{ page.header.ics }}" class="button">Termin speichern</a>
        {% endif %}

    </footer>

</article>
